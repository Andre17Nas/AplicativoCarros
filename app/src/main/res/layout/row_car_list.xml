<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="#f1f1f1"
    app:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_car_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/audir8"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/txt_modelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modelo"
            android:layout_below="@id/img_car_pic"
            android:layout_marginTop="5dp"
            android:layout_alignStart="@id/img_car_pic"
            android:layout_alignLeft="@id/img_car_pic"/>

        <TextView
            android:id="@+id/txt_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ver_detalhes"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="right"
            android:layout_below="@id/img_car_pic"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>